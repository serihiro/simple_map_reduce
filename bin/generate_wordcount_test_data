#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'faker'
require 'thor'

class WordCountTestDataGenerator < Thor
  desc 'generate', 'generate test data'
  method_option :count, type: :numeric, default: 1000, desc: 'The number of line count you want'
  def generate
    base_path = File.realpath('../../examples', __FILE__)
    file = File.open(File.join(base_path, 'wordcount', 'input.txt'), 'w')
    file.write(Faker::Lorem.paragraphs(options[:count]).join("\n"))
    file.close
  end
end

WordCountTestDataGenerator.start
